generator client {
  provider = "prisma-client"
  output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/smart_ledger"
}

model Transaction {
  id          String   @id @default(uuid())
  date        DateTime
  description String
  category    String
  amount      Float
  type        String
  status      String   @default("COMPLETED")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
